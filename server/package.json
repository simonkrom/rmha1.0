{
  "name": "laboratoire-backend",
  "version": "0.1.0",
  "description": "Minimal backend for LABORATOIRE: auth, permissions, immutable audit",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "migrate": "node scripts/migrate.js",
    "test": "jest --runInBand",
    "test:ci": "npm ci && npm test",
    "test:docker": "docker run --rm -v \"${PWD}:/usr/src/app\" -w /usr/src/app node:20-alpine sh -lc \"npm ci --silent && npm test --silent\"",
    "migrate:docker": "docker run --rm -v \"${PWD}:/usr/src/app\" -w /usr/src/app node:20-alpine sh -lc \"node scripts/migrate.js\"",
    "lint": "eslint . --ext .js",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.28.0",
    "pg": "^8.11.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.18.2",
    "helmet": "^6.0.0",
    "socket.io": "^4.7.2",
    "jsonwebtoken": "^9.0.0",
    "morgan": "^1.10.0"
  }
  ,
  "devDependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.46.0",
    "prettier": "^2.8.8",
    "eslint-config-prettier": "^8.8.0"
  }
}
